create or replace trigger emp_Trigger_2
after update or insert
on emp_copy
for each ROW
BEGIN
    if updating then

    DBMS_OUTPUT.PUT_LINE('Triggers called after the update statement');
    else 
      DBMS_OUTPUT.PUT_LINE('Inserted');
      
    end if;
      
end

